class HeapClass
  
  @array=Array.new;
  @arrayLength=-1;
  @heapSize=-1;
  
  def initialize(inputArray, inputArrayLength, inputHeapSize)
    @arrayLength=inputArrayLength;
    @heapSize=inputHeapSize;
    
    @array=inputArray;
    
  end
  
  def displayArray()
    puts @array;
  end
end

heapObject=HeapClass.new([10,30,10,50,6,9,1,20],8,8);
heapObject.displayArray();